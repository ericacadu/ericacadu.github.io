$primary = #ff7575;
main {
    max-width: 1440px;
}
img {
    display: block;
    width 100%;
    max-width: 700px;
    margin: 1rem auto;
}
hr {
    background: transparent;
    border-top: 1px solid #DDD;
}
.sidebar-toc-active .sidebar-nav-toc, .sidebar-overview-active .sidebar-nav-overview, .post-toc .nav .active > a , a[target^="_blank"], span[itemprop^="name"]{
    color: $primary;
    border-bottom 1px solid $primary;
}

.links-of-author-item a {
    color: #666;
    border 0;
}
.post-title-link span {
    color: $primary;
    border: 0;
}

.sidebar {
    visibility: visible;
}

.sidebar-nav li:hover {
    color: $primary;
}

.menu .menu-item .badge {
    text-shadow: 0 0 0 transparent
}

mark.search-keyword, .posts-expand .post-meta-container time:hover {
    color: $primary;
    border-color: $primary;
}

.with-love {
    color: $primary;
}
.reading-progress-bar {
    background $primary;
}

figure.highlight, pre {
    margin: 1rem auto 1.5rem;
}

code {
    background #eee;
    color: #6897BB;
}
blockquote {
    color: #666;
    line-height 1.8;
    background: #eee;
    padding: 1rem;
    margin: 1rem auto;
    border-left: 0;
}
blockquote p {
    margin-bottom: 0;
}
blockquote code {
    background rgba(#FFF, .5);
}
.desc {
    display: inline-block;
    text-align center;
    font-size: 0.9em;
    padding: 0 10px;
    background #eee;
    position: relative;
    left: 50%;
    transform: translate(-50%, -100%);
    border-radius: 5px;
}

.alert {
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid transparent;
    border-radius: 4px;
}
.alert-success {
    color: #468847;
    background-color: #dff0d8;
    border-color: #d6e9c6;
}
.alert-info {
    color: #3a87ad;
    background-color: #D9EDF7;
    border-color: #c5d5dd;
}
.alert-warning {
    color: #c09853;
    background-color: #fcf8e3;
    border-color: #faebcc;
}
.alert-danger {
    color: #b94a48;
    background-color: #F2DEDE;
    border-color: #ebccd1;
}

@media (min-width: 922px) {
    .post-body {
        text-align: left;
    }
}
@media (max-width: 991px) {
    .post-body {
        text-align: left;
    }
}
